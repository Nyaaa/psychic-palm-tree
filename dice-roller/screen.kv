<MainScreen>:
    id: sm
    FirstScreen:

<FirstScreen>:
    name: "first_screen"
    GridLayout:
        rows: 5
        cols: 2
        TextInput:
            size_hint: (.2, None)
            height: 30
            id: roll_times
            multiline: False
            input_filter: "int"
            hint_text: 'Times to roll:'
        TextInput:
            size_hint: (.2, None)
            height: 30
            id: modifier
            multiline: False
            input_filter: "int"
            hint_text: 'Modifier:'
        Button:
            text:'d4'
            on_press:
                app.sides = 4
                root.roll(app.sides)
        Button:
            text:'d6'
            on_press:
                app.sides = 6
                root.roll(app.sides)
        Button:
            text:'d8'
            on_press:
                app.sides = 8
                root.roll(app.sides)
        Button:
            text:'d10'
            on_press:
                app.sides = 10
                root.roll(app.sides)
        Button:
            text:'d12'
            on_press:
                app.sides = 12
                root.roll(app.sides)
        Button:
            text:'d20'
            on_press:
                app.sides = 20
                root.roll(app.sides)
        Button:
            text:'d100'
            on_press:
                app.sides = 100
                root.roll(app.sides)
